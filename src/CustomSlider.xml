<?xml version="1.0" encoding="utf-8"?>
<widget id="com.dvgroup.customslider.CustomSlider" pluginWidget="true" needsEntityContext="true"
    offlineCapable="true"
    supportedPlatform="Web"
    xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Custom Slider</name>
    <description>CustomSlider</description>
    <icon />
    <properties>
        <propertyGroup caption="General">
            <propertyGroup caption="Layout - Modes">
                <property key="orientation" type="enumeration" defaultValue="horizontal">
                    <caption>Orientation</caption>
                    <description />
                    <enumerationValues>
                        <enumerationValue key="horizontal">Horizontal</enumerationValue>
                        <enumerationValue key="vertical">Vertical</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="rangeMode" type="boolean" defaultValue="false">
                    <caption>Enable range selection</caption>
                    <description>When enabled, two thumbs allow selecting a range.</description>
                </property>
            </propertyGroup>

            <propertyGroup caption="Minimum">
                <property key="minValueType" type="enumeration" defaultValue="static">
                    <caption>Minimum value type</caption>
                    <description />
                    <enumerationValues>
                        <enumerationValue key="static">Static</enumerationValue>
                        <enumerationValue key="dynamic">Dynamic</enumerationValue>
                        <enumerationValue key="expression">Expression</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="minStaticValue" type="decimal" defaultValue="0">
                    <caption>Minimum value</caption>
                    <description></description>
                </property>
                <property key="minDynamicValue" type="attribute" required="false">
                    <caption>Minimum value</caption>
                    <description />
                    <attributeTypes>
                        <attributeType name="Decimal" />
                        <attributeType name="Integer" />
                        <attributeType name="Long" />
                    </attributeTypes>
                </property>
                <property key="minExpressionValue" type="expression" required="false">
                    <caption>Minimum value</caption>
                    <description />
                    <returnType type="Decimal" />
                </property>
                <property key="minShowTooltip" type="boolean" defaultValue="true">
                    <caption>Show tooltip</caption>
                    <description />
                </property>
                <property key="minTooltipType" type="enumeration" defaultValue="value">
                    <caption>Tooltip type</caption>
                    <description>Choose 'Custom' to define your own content.</description>
                    <enumerationValues>
                        <enumerationValue key="value">Current value</enumerationValue>
                        <enumerationValue key="customText">Custom</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="minTooltipTemplate" type="textTemplate" required="false">
                    <caption>Tooltip</caption><description />
                </property>
                <property key="minTooltipPosition" type="enumeration" defaultValue="bottom">
                    <caption>Tooltip position</caption><description />
                    <enumerationValues>
                        <enumerationValue key="top">Top</enumerationValue>
                        <enumerationValue key="bottom">Bottom</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="minTooltipAlwaysVisible" type="boolean" defaultValue="false">
                    <caption>Tooltip always visible</caption><description />
                </property>
            </propertyGroup>

            <propertyGroup caption="Maximum">
                <property key="maxValueType" type="enumeration" defaultValue="static">
                    <caption>Maximum value type</caption><description />
                    <enumerationValues>
                        <enumerationValue key="static">Static</enumerationValue>
                        <enumerationValue key="dynamic">Dynamic</enumerationValue>
                        <enumerationValue key="expression">Expression</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="maxStaticValue" type="decimal" defaultValue="100">
                    <caption>Maximum value</caption><description />
                </property>
                <property key="maxDynamicValue" type="attribute" required="false">
                    <caption>Maximum value</caption><description />
                    <attributeTypes>
                        <attributeType name="Integer" />
                        <attributeType name="Long" />
                        <attributeType name="Decimal" />
                    </attributeTypes>
                </property>
                <property key="maxExpressionValue" type="expression" required="false">
                    <caption>Maximum value</caption><description />
                    <returnType type="Decimal" />
                </property>
                <property key="maxShowTooltip" type="boolean" defaultValue="true">
                    <caption>Show tooltip</caption><description />
                </property>
                <property key="maxTooltipType" type="enumeration" defaultValue="value">
                    <caption>Tooltip type</caption>
                    <description>Choose 'Custom' to define your own content.</description>
                    <enumerationValues>
                        <enumerationValue key="value">Current value</enumerationValue>
                        <enumerationValue key="customText">Custom</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="maxTooltipTemplate" type="textTemplate" required="false">
                    <caption>Tooltip</caption><description />
                </property>
                <property key="maxTooltipPosition" type="enumeration" defaultValue="bottom">
                    <caption>Tooltip position</caption><description />
                    <enumerationValues>
                        <enumerationValue key="top">Top</enumerationValue>
                        <enumerationValue key="bottom">Bottom</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="maxTooltipAlwaysVisible" type="boolean" defaultValue="false">
                    <caption>Tooltip always visible</caption><description />
                </property>
            </propertyGroup>

            <propertyGroup caption="Step">
                <property key="stepValueType" type="enumeration" defaultValue="static">
                    <caption>Step size type</caption><description />
                    <enumerationValues>
                        <enumerationValue key="static">Static</enumerationValue>
                        <enumerationValue key="dynamic">Dynamic</enumerationValue>
                        <enumerationValue key="expression">Expression</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="stepStaticValue" type="decimal" defaultValue="1">
                    <caption>Step size</caption><description />
                </property>
                <property key="stepDynamicValue" type="attribute" required="false">
                    <caption>Step size</caption><description />
                    <attributeTypes>
                        <attributeType name="Integer" />
                        <attributeType name="Long" />
                        <attributeType name="Decimal" />
                    </attributeTypes>
                </property>
                <property key="stepExpressionValue" type="expression" required="false">
                    <caption>Step size</caption><description />
                    <returnType type="Decimal" />
                </property>
            </propertyGroup>

            <propertyGroup caption="Value">
                <property key="sliderValueType" type="enumeration" defaultValue="static">
                    <caption>Value type</caption><description />
                    <enumerationValues>
                        <enumerationValue key="static">Static</enumerationValue>
                        <enumerationValue key="dynamic">Dynamic</enumerationValue>
                        <enumerationValue key="expression">Expression</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="sliderStaticValue" type="decimal" defaultValue="0">
                    <caption>Value</caption><description />
                </property>
                <property key="sliderDynamicValue" type="attribute" required="false">
                    <caption>Value</caption><description />
                    <attributeTypes>
                        <attributeType name="Integer" />
                        <attributeType name="Long" />
                        <attributeType name="Decimal" />
                    </attributeTypes>
                </property>
                <property key="sliderExpressionValue" type="expression" required="false">
                    <caption>Value</caption><description />
                    <returnType type="Decimal" />
                </property>
                <property key="sliderShowTooltip" type="boolean" defaultValue="true">
                    <caption>Show tooltip</caption><description />
                </property>
                <property key="sliderTooltipType" type="enumeration" defaultValue="value">
                    <caption>Tooltip type</caption>
                    <description>Choose 'Custom' to define your own content.</description>
                    <enumerationValues>
                        <enumerationValue key="value">Current value</enumerationValue>
                        <enumerationValue key="customText">Custom</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="sliderTooltipTemplate" type="textTemplate" required="false">
                    <caption>Tooltip</caption><description />
                </property>
                <property key="sliderTooltipPosition" type="enumeration" defaultValue="top">
                    <caption>Tooltip position</caption><description />
                    <enumerationValues>
                        <enumerationValue key="top">Top</enumerationValue>
                        <enumerationValue key="bottom">Bottom</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="sliderTooltipAlwaysVisible" type="boolean" defaultValue="false">
                    <caption>Tooltip always visible</caption><description />
                </property>
            </propertyGroup>

            <propertyGroup caption="Range (when enabled)">
                <property key="lowerValueType" type="enumeration" defaultValue="static">
                    <caption>Lower value type</caption><description />
                    <enumerationValues>
                        <enumerationValue key="static">Static</enumerationValue>
                        <enumerationValue key="dynamic">Dynamic</enumerationValue>
                        <enumerationValue key="expression">Expression</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="lowerStaticValue" type="decimal" defaultValue="0">
                    <caption>Lower value</caption><description />
                </property>
                <property key="lowerDynamicValue" type="attribute" required="false">
                    <caption>Lower value</caption><description />
                    <attributeTypes>
                        <attributeType name="Integer" />
                        <attributeType name="Long" />
                        <attributeType name="Decimal" />
                    </attributeTypes>
                </property>
                <property key="lowerExpressionValue" type="expression" required="false">
                    <caption>Lower value</caption><description />
                    <returnType type="Decimal" />
                </property>

                <property key="upperValueType" type="enumeration" defaultValue="static">
                    <caption>Upper value type</caption><description />
                    <enumerationValues>
                        <enumerationValue key="static">Static</enumerationValue>
                        <enumerationValue key="dynamic">Dynamic</enumerationValue>
                        <enumerationValue key="expression">Expression</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="upperStaticValue" type="decimal" defaultValue="100">
                    <caption>Upper value</caption><description />
                </property>
                <property key="upperDynamicValue" type="attribute" required="false">
                    <caption>Upper value</caption><description />
                    <attributeTypes>
                        <attributeType name="Integer" />
                        <attributeType name="Long" />
                        <attributeType name="Decimal" />
                    </attributeTypes>
                </property>
                <property key="upperExpressionValue" type="expression" required="false">
                    <caption>Upper value</caption><description />
                    <returnType type="Decimal" />
                </property>
            </propertyGroup>

            <propertyGroup caption="Marks">
                <property key="marks" type="object" isList="true" required="false">
                    <caption>Marks</caption>
                    <description>Optional visual markers along the slider.</description>
                    <properties>
                        <propertyGroup caption="Mark">
                            <property key="positionType" type="enumeration" defaultValue="static">
                                <caption>Position type</caption><description />
                                <enumerationValues>
                                    <enumerationValue key="static">Static</enumerationValue>
                                    <enumerationValue key="dynamic">Dynamic</enumerationValue>
                                    <enumerationValue key="expression">Expression</enumerationValue>
                                </enumerationValues>
                            </property>
                            <property key="positionStatic" type="decimal" defaultValue="0">
                                <caption>Static position</caption><description />
                            </property>
                            <property key="positionDynamic" type="attribute" required="false">
                                <caption>Dynamic position</caption><description />
                                <attributeTypes>
                                    <attributeType name="Decimal" />
                                    <attributeType name="Integer" />
                                    <attributeType name="Long" />
                                </attributeTypes>
                            </property>
                            <property key="positionExpression" type="expression" required="false">
                                <caption>Expression position</caption><description />
                                <returnType type="Decimal" />
                            </property>
                            <property key="labelType" type="enumeration" defaultValue="static">
                                <caption>Label type</caption><description />
                                <enumerationValues>
                                    <enumerationValue key="static">Static</enumerationValue>
                                    <enumerationValue key="dynamic">Dynamic</enumerationValue>
                                    <enumerationValue key="expression">Expression</enumerationValue>
                                </enumerationValues>
                            </property>
                            <property key="labelStatic" type="string" required="false">
                                <caption>Static label</caption><description />
                            </property>
                            <property key="labelDynamic" type="attribute" required="false">
                                <caption>Dynamic label</caption><description />
                                <attributeTypes>
                                    <attributeType name="String" />
                                </attributeTypes>
                            </property>
                            <property key="labelExpression" type="expression" required="false">
                                <caption>Expression label</caption><description />
                                <returnType type="String" />
                            </property>
                            <property key="markColor" type="string" required="false">
                                <caption>Mark color</caption>
                                <description>CSS color for this mark (overrides global).</description>
                            </property>
                            <property key="markClass" type="string" required="false">
                                <caption>Mark CSS class</caption>
                                <description>Additional CSS class for this mark.</description>
                            </property>
                        </propertyGroup>
                    </properties>
                </property>
            </propertyGroup>

            <propertyGroup caption="Ticks">
                <property key="showTicks" type="boolean" defaultValue="false">
                    <caption>Show ticks</caption>
                    <description />
                </property>
                <property key="tickInterval" type="decimal" defaultValue="0">
                    <caption>Tick interval</caption>
                    <description>0 means auto/none. Use a positive number to show ticks every N units.</description>
                </property>
                <property key="snapToTicks" type="boolean" defaultValue="false">
                    <caption>Snap to ticks</caption>
                    <description />
                </property>
            </propertyGroup>

            <propertyGroup caption="Behavior">
                <property key="debounceMs" type="integer" defaultValue="0">
                    <caption>Debounce onChange (ms)</caption><description />
                </property>
                <property key="snapToMarks" type="boolean" defaultValue="false">
                    <caption>Snap to marks</caption><description />
                </property>
            </propertyGroup>

            <propertyGroup caption="Styling">
                <property key="trackColor" type="string" defaultValue="#3EA2F7">
                    <caption>Track color</caption><description />
                </property>
                <property key="trackBackgroundColor" type="string" defaultValue="#cce5ff">
                    <caption>Track background color</caption><description />
                </property>
                <property key="thumbColor" type="string" defaultValue="#ffffff">
                    <caption>Thumb color</caption><description />
                </property>
                <property key="markColorGlobal" type="string" defaultValue="#3EA2F7">
                    <caption>Marks color (default)</caption><description />
                </property>
                <property key="thumbSize" type="integer" defaultValue="24">
                    <caption>Thumb size (px)</caption><description />
                </property>
                <property key="trackThickness" type="integer" defaultValue="8">
                    <caption>Track thickness (px)</caption><description />
                </property>
                <property key="customClass" type="string" required="false">
                    <caption>Custom CSS class</caption><description />
                </property>
            </propertyGroup>

            <propertyGroup caption="Events">
                <property key="onChange" type="action" required="false">
                    <caption>On change</caption>
                    <description>Triggered whenever the value changes.</description>
                </property>
                <property key="onChangeEnd" type="action" required="false">
                    <caption>On change end</caption>
                    <description>Triggered when the user releases the thumb.</description>
                </property>
            </propertyGroup>

            <propertyGroup caption="Accessibility">
                <property key="ariaLabel" type="string" required="false">
                    <caption>ARIA label</caption><description />
                </property>
                <property key="ariaLabelledBy" type="string" required="false">
                    <caption>ARIA labelledby</caption><description />
                </property>
            </propertyGroup>

            <propertyGroup caption="Label">
                <systemProperty key="Label" />
            </propertyGroup>
            <propertyGroup caption="Editability">
                <systemProperty key="Editability" />
            </propertyGroup>
            <propertyGroup caption="Visibility">
                <systemProperty key="Visibility" />
            </propertyGroup>
        </propertyGroup>
    </properties>
</widget>